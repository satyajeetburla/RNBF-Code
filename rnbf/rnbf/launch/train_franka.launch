<launch>
    <arg name="live" default="true"/>

    <group if="$(arg live)">
        <!-- Launch live RNBF Franka node -->
        <node pkg="rnbf" name="rnbf_train" type="train.py" output="screen" args="--config $(find rnbf)/train/configs/realsense_franka.json"/>
    </group>
    <group unless="$(arg live)">
        <arg name="inc" default="false"/>
        <group if="$(arg inc)">
            <!-- Launch offline RNBF Franka node incremental-->
            <node pkg="rnbf" name="rnbf_train" type="train_vis.py" output="screen" args="--config $(find rnbf)/train/configs/realsense_franka_offline.json"/>
        </group>
        <group unless="$(arg inc)">
            <!-- Launch offline RNBF Franka node batch-->
            <node pkg="rnbf" name="rnbf_train" type="train_vis.py" output="screen" args="--config $(find rnbf)/train/configs/realsense_franka_offline.json -ni"/>
        </group>
    </group>
</launch>
